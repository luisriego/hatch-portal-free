<div role="main" class="col-md-9 col-sm-8">

    <div>
        <h1 class="pageTitle">+<span style="color: #e84a37">+</span></h1>

            <div class="project-details">
                <div class="col-md-12">
                    <h2>Fatos Concretos do projeto <span style="color: #e84a37">{{ project.title }}</span></h2>
                    {% if facts|length > 0 %}
                    <ul style=" background-color: lightgray; padding: 10px">
                        {% for fact in facts %}
                            <li>{{ fact.name }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
            </div>

        <h3 class="pageTitle">Adicione um Fato (m√°ximo 3)</h3>
    </div>

    <div class="component sitecore-form" id="{0f27ac40-b2a6-4b1f-b31d-a58a86756b49}">
        <div class="component-content">
            {{ form_start(project_form, {'attr': {'class': 'custom-form text-left hatch-scfForm'}}) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(project_form) }}
                </div>

                <div class="font-weight-bold">
                    <div class="required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content">
                        {{ form_label(project_form.name, 'Texto', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(project_form.name, {
                            'required': false,
                            'attr': {
                                'class': 'form-control text-box single-line hatch-form-control font-weight-bold'
                            } })
                        }}
                        {{ form_help(project_form.name, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                </div>
                <div class="form-submit-border" style="margin-top: 50px">
                    {{ form_widget(project_form.addNew, {
                        'label': 'Adicionar mais um Fato concreto ',
                        'attr': {
                            'class': 'btn btn-primary btn-lg',
                        } })
                    }}
                    {{ form_widget(project_form.next, {
                        'label': 'Seguiente ',
                        'attr': {
                            'class': 'btn btn-default'
                        } })
                    }}
                </div>
            {{ form_rest(project_form) }}
            {{ form_end(project_form) }}
        </div>
    </div>
</div>
