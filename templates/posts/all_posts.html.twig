    <!-- Lattest news-->
    <div class="container clearfix sectpad-sec">
      <div class="section_header2 common">
        <h2>Últimas Postagens</h2>
      </div>
      {% for row in posts|batch(3) %}
          <div class="row event-pad">
              {% for blog in row %}
                  <div class="col-md-4 col-sm-4 col-xs-12">
                      <div class="news-evn-img">
                          <a href="{{ path('app_single_blog', {slug: blog.slug}) }}" class="image_hover">
                              <img src="{{ asset(blog.photo) }}" alt="{{ blog.author }}" class="img-responsive zoom_img_effect">
                          </a>
                          <div class="event-date">
                              <h3>{{ blog.date|date("d")}} <small>{{ blog.date|date("M")}}</small></h3>
                          </div>
                      </div>
                      <div class="news-evn-cont">
                          <div class="news-meta">
                              <a href="{{ path('app_single_blog', {slug: blog.slug}) }}">Por: {{ blog.author }}</a>
                              <a href="{{ path('app_single_blog', {slug: blog.slug}) }}"> Comentários: 6</a>
                          </div>
                          <a href="{{ path('app_single_blog', {slug: blog.slug}) }}">
                              <h3>{{ blog.title }}</h3>
                          </a>
                      </div>
                  </div>
              {% endfor %}
          </div>
      {% endfor %}
    </div>


