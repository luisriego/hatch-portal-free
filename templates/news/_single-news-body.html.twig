{#                        </div>#}
                        <div class="col-md-8 col-sm-12 pull-left img-box" style="padding: 0; min-heigth: 185px">
                            <h6 style="margin: 5px">{{ news.publishedOn|date('d/M/Y') }}</h6>
                            <h6 style="margin: 5px"><i class="fa fa-user"></i> {{ news.author }}</h6>
                            <hr>
                            <h2>{{ news.title }}</h2>
                            <h3>{{ news.subtitle }}</h3>
                        </div>
                        {{ news.text|raw }}
                    </article>
                </div>
            </div>
        </div>
    </div>
