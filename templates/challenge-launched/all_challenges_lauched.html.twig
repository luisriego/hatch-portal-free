{% extends "base.html.twig" %}

{% block body %}
    {% include "news/_header.html.twig" %}
    <!-- Inner Header-->
{#    <section class="inner-banner2 clearfix">#}
{#      <div class="container clearfix">#}
{#        <h2>Projetos</h2>#}
{#      </div>#}
{#    </section>#}
    <section class="breadcumb-wrapper">
      <div class="container clearfix">
        <ul class="breadcumb">
          <li><a href="{{ path('app_homepage') }}">Home</a></li>
          <li><span>{{ breadcrumb }}</span></li>
        </ul>
      </div>
    </section>

    <!-- Lattest challenges launched-->
    <div class="container clearfix sectpad-sec">
      <div class="section_header2 common">
      </div>
      {% for row in challengesLaunched|batch(3) %}
          <div class="row event-pad">
              {% for challenge in row %}
                  <div class="col-md-4 col-sm-4 col-xs-12">
                      <div class="challenge-evn-img">
                          <a href="{{ challenge.url }}" target="_blank" class="image_hover">
                              {% if challenge.image is not empty %}
                                  <img
                                      src="{{ asset(challenge.image) }}" alt="{{ challenge.image }}"
                                      class="img-responsive zoom_img_effect" width="100%"
                                  >
                              {% else %}
                                  <img
                                      src="https://res.cloudinary.com/inovacaobrasil/image/upload/v1684699226/challenge/news_default.png" alt="{{ challenge.author }}"
                                      class="img-responsive zoom_img_effect" width="100%" height="220px"
                                  >
                              {% endif %}
                          </a>
                          <div class="event-date">
                              {% set dateTime = date(challenge.date) %}

                              <h3 style="margin-top: -5px">{{ dateTime|date("d")}} <small>{{ dateTime|date("M")}}</small><small>{{ dateTime|date("Y")}}</small></h3>
                          </div>
                      </div>
                      <div class="challenge-evn-cont">
                          <div class="challenge-meta">
                              <a href="{{ path('app_single_blog', {slug: challenge.slug}) }}">Por: {{ challenge.author }}</a>
                          </div>
                          <a href="{{ path('app_single_blog', {slug: challenge.slug}) }}">
                              <h3>{{ challenge.title }}</h3>
                          </a>
                      </div>
                  </div>
              {% endfor %}
          </div>
      {% endfor %}
    </div>

    {% include "modules/_footer.html.twig" %}

{% endblock %}