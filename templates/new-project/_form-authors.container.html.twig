<div role="main" class="col-md-12 col-sm-8">
    <div>
        <h1 class="pageTitle"> Inclusão de um Projeto</h1>
        <h3>Começemos com os dados dos envolvidos</h3>
    </div>
    <div class="component sitecore-form" id="">
        <div class="component-content" data-controller="project">
            {{ form_start(author_form, {'attr': {'class': 'custom-form text-left hatch-scfForm'}}) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(author_form) }}
                </div>

                <div class="font-weight-bold">
                    <div class="col-md-4 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="area">
                        {{ form_label(author_form.name, 'Nome do responsável *', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(author_form.name, {
                            'attr': {
                                'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                                'data-action': 'project#areaBtn'
                            } })
                        }}
                        {{ form_help(author_form.name, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-7 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="title">
                        {{ form_label(author_form.surname, 'Sobrenome do responsável *', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(author_form.surname, { 'attr': {
                            'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                            'data-action': 'blur->project#titleBtn'
                        } }) }}
                        {{ form_help(author_form.surname, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-11 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="subtitle">
                        {{ form_label(author_form.resume, 'Lista dos envolvidos, um por linha', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(author_form.resume, { 'attr': {
                            'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                            'data-action': 'blur->project#subtitleBtn'
                        } }) }}
                        {{ form_help(author_form.resume, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-11 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="location">
                        {{ form_label(author_form.position, 'Cargo ocupado pelo responsável no Projeto *', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(author_form.position, { 'attr': {
                            'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                            'data-action': 'blur->project#locationBtn'
                        } }) }}
                        {{ form_help(author_form.position, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-11 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content">
                        {{ form_label(author_form.email, 'E-mail do responsável *', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(author_form.email, { 'attr': {'class': 'form-control text-box single-line hatch-form-control font-weight-bold', 'required': false} }) }}
                        {{ form_help(author_form.email, { 'attr': {'class': 'help-block font-weight-bold',} }) }}
                    </div>
                    <div class="col-md-11 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content">
                        {{ form_label(author_form.avatar, 'Foto da equipe', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(author_form.avatar, { 'attr': {'class': 'form-control text-box single-line hatch-form-control font-weight-bold', 'required': false} }) }}
                        {{ form_help(author_form.avatar, { 'attr': {'class': 'help-block font-weight-bold',} }) }}
                    </div>
                </div>
                <div class="form-submit-border" style="margin-top: 50px; text-align: right" data-project-target="button">
                    {{ form_widget(author_form.next, {
                        'label': 'Próximo ',
                        'attr': {
                            'class': 'btn btn-default font-weight-bold',
                            'disabled': false
                        } })
                    }}
                </div>
            {{ form_rest(author_form) }}
            {{ form_end(author_form) }}
        </div>
    </div>
</div>
