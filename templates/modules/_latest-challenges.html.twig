<!-- Lattest challenge-->
{% if challenges is not empty %}
<div class="container clearfix sectpad-sec">
    <div class="section_header2 common col-md-12">
        <h2>Desafios lançados no nosso portal</h2>
    </div>
    <div class="row event-pad col-md-12">
        {% for singleChallenge in challenges %}
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="challenge-evn-img">
                    <a target="_blank" href="{{ singleChallenge.url }}" class="image_hover text-center">
                        {% if singleChallenge.image is not empty %}
                            <img
                                src="{{ asset(singleChallenge.image) }}" alt="{{ singleChallenge.author }}"
                                class="img-responsive zoom_img_effect"
                                width="100%" height="220px"
                            >
                        {% else %}
                            <img
                                src="https://res.cloudinary.com/inovacaobrasil/image/upload/v1684699226/news/news_default.png" alt="avatar padrão"
                                class="img-responsive zoom_img_effect"
                                width="100%" height="220px"
                            >
                        {% endif %}
                    </a>
                    <div class="event-date">
                        <h3 style="margin-top: -5px">
                            {{ singleChallenge.publishedOn|date("d")}}
                            <small>{{ singleChallenge.publishedOn|date("M")}}</small>
                            <small>{{ singleChallenge.publishedOn|date("Y")}}</small>
                        </h3>
                    </div>
                </div>
                <div class="challenge-evn-cont">
                    <div class="challenge-meta">
                        <p>Por: {{ singleChallenge.author }}</p>
{#                        <a href="{{ path('app_single_blog', {slug: singleChallenge.slug}) }}"> Comentários: </a>#}
                    </div>
                    <h3>{{ singleChallenge.title }}</h3>
                    <a target="_blank" class="btn btn-outline-primary btn-sm" href="{{ singleChallenge.url }}">Veja o artigo completo </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}
