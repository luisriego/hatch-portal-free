<div role="main" class="col-md-12 col-sm-8">
    <div>
        <h1 class="pageTitle"> Publicação de um artigo</h1>
        <h3>Agora os dados artigo</h3>
    </div>
    <div class="component sitecore-form" id="">
        <div class="component-content" data-controller="project">
            {{ form_start(post_form, {'attr': {'class': 'custom-form text-left hatch-scfForm'}}) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(post_form) }}
                </div>

                <div class="font-weight-bold">
                    <div class="col-md-4 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="area">
                        {{ form_label(post_form.title, 'Título *', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(post_form.title, {
                            'attr': {
                                'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                                'data-action': 'project#areaBtn'
                            } })
                        }}
                        {{ form_help(post_form.title, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-7 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="title">
                        {{ form_label(post_form.subtitle, 'Subtítulo *', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(post_form.subtitle, { 'attr': {
                            'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                            'data-action': 'blur->project#titleBtn'
                        } }) }}
                        {{ form_help(post_form.subtitle, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-11 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content" data-project-target="subtitle">
                        {{ form_label(post_form.text, 'Conteúdo do artigo', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(post_form.text, { 'attr': {
                            'class': 'form-control text-box single-line hatch-form-control font-weight-bold',
                            'data-action': 'blur->project#subtitleBtn'
                        } }) }}
                        {{ form_help(post_form.text, { 'attr': {'class': 'help-block font-weight-bold'} }) }}
                    </div>
                    <div class="col-md-11 col-sm-8 required-field scfSingleLineTextBorder form-group has-feedback contactus-field-content">
                        {{ form_label(post_form.photo, 'Sua foto', {'label_attr': {'class': 'control-label contactus-field-title font-weight-bold'}}) }}
                        {{ form_widget(post_form.photo, { 'attr': {'class': 'form-control text-box single-line hatch-form-control font-weight-bold', 'required': false} }) }}
                        {{ form_help(post_form.photo, { 'attr': {'class': 'help-block font-weight-bold',} }) }}
                    </div>
                </div>
                <div class="form-submit-border" style="margin-top: 50px; text-align: right" data-project-target="button">
                    {{ form_widget(post_form.submit, {
                        'label': 'Próximo ',
                        'attr': {
                            'class': 'btn btn-default font-weight-bold',
                            'disabled': false
                        } })
                    }}
                </div>
            {{ form_rest(post_form) }}
            {{ form_end(post_form) }}
        </div>
    </div>
</div>
